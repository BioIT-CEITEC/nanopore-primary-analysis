{
  "workflow_description": {
    "name":"nanopore_primary_analysis",
    "version": 1.0,
    "label":"Basecalling, alignment, methylation",
    "type":"primary_analysis",
    "inputs":[
      "raw_reads/{sample}/{sample}.pod5"
    ],
    "outputs":[
      "aligned/{sample}/*",
      "summary/{sample}/*",
      "methylation/{sample}/*",
      "qc_reports/*"
    ],
    "report_index": "qc_reports/all_samples/multiqc_report.html",
    "reports":[
       "qc_reports/*"
    ],
    "run_parameters": {
      "cpu": 4,
      "memory": 128,
      "gpu": true
    }
  },
  "general_params": [
  "entity_name",
  "sample_name"
  ],
"gui_params" : {
    "primary": {  
      "organism": {
        "label": "Organism",
        "type": "enum",
        "dynamicEnumName": "organism"
      },
      "assembly": {
        "label": "Assembly",
        "type": "enum",
        "dynamicEnumName": "assembly",
        "filters": {
          "group": {
            "param": "organism",
            "type": "value",
            "showGroupLabel": false
          }
        }
      },
      "dorado_model": {
        "label": "Selected model",
        "type": "enum",
        "info": "Model to use for basecalling",
        "default": "hac",
        "list": {
          "fast": "fast - quickest model",
          "hac": "hac - high accurate model",
          "sup": "sup - super accurate model"
        }
      },
      "5mC_methylation": {
        "label": "Detect 5mC and 5hmC methylation changes",
        "type": "bool",
        "info": "Detect 5mC and 5hmC methylation changes with dorado",
        "default": false
      }, 
      "6mA_methylation": {
        "label": "Detect 6mA methylation changes",
        "type": "bool",
        "info": "Detect 6mA methylation changes with dorado",
        "default": false
      },
      "splice_aware_alignment": {
        "label": "Do splice-aware alignment",
        "type": "bool",
        "info": "Add option for minimap to do splice-aware alignment",
        "default": true
      }
    }
  }
}

